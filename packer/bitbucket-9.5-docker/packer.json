{
  "builders": [
    {
      "changes": [
        "ENV LANG=en_US.UTF-8",
        "ENV LC_ALL=en_US.UTF-8",
        "ENV SHELL=/bin/bash",
        "ENV TZ=UTC",
        "ENV BITBUCKET_OWNER=bitbucket",
        "ENV BITBUCKET_GROUP=bitbucket",
        "ENV BITBUCKET_HOME=/var/atlassian/application-data/bitbucket",
        "ENV BITBUCKET_CATALINA=/opt/atlassian/bitbucket",
        "ENV PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/opt/atlassian/bitbucket/bin",
        "VOLUME /var/atlassian/application-data/bitbucket",
        "WORKDIR /var/atlassian/application-data/bitbucket",
        "EXPOSE 7990",
        "EXPOSE 7999",
        "EXPOSE 8006",
        "ENTRYPOINT [\"catatonit\", \"-g\", \"--\", \"docker-entrypoint.sh\"]",
        "CMD [\"start-bitbucket.sh\", \"-fg\"]"
      ],
      "commit": true,
      "image": "ubuntu:24.04",
      "privileged": true,
      "type": "docker"
    }
  ],
  "post-processors": [
    {
      "inline": [
        "set -eu",
        "export _ID=$(docker images | awk '{ print $3 }' | awk 'NR==2')",
        "mkdir -p output-docker",
        "docker save $_ID | gzip -9 > output-docker/image.tar.gz"
      ],
      "type": "shell-local"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "set -eu",
        "apt-get update",
        "DEBIAN_FRONTEND=noninteractive apt-get dist-upgrade -y",
        "DEBIAN_FRONTEND=noninteractive apt-get install -y ca-certificates curl gcc hostname iproute2 language-pack-en locales python3 sudo"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "set -eu",
        "groupadd -g 999 bitbucket",
        "useradd -g 999 -u 999 -d /var/atlassian/application-data/bitbucket -s /bin/bash -m bitbucket",
        "chown -Rf bitbucket:bitbucket /var/atlassian/application-data/bitbucket",
        "mkdir -p /etc/sudoers.d",
        "chmod 0755 /etc/sudoers.d",
        "echo \"bitbucket ALL=(ALL) NOPASSWD: ALL\" > /etc/sudoers.d/bitbucket",
        "chmod 0440 /etc/sudoers.d/bitbucket",
        "chown -Rf root:root /etc/sudoers.d"
      ],
      "type": "shell"
    },
    {
      "galaxy_file": "./ansible-galaxy-requirements.yml",
      "inventory_directory": "./",
      "playbook_file": "./packer.yml",
      "type": "ansible",
      "user": "root"
    }
  ]
}

